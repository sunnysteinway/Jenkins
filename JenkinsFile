pipeline {
   agent any

   stages {
       stage('Initialize') {
           steps {
               echo 'Initializing...'
           }
       }
       stage('Tests') {
           parallel {
               stage('Test #1') {
                   agent any
                   steps {
                       echo 'Current time (agent 1): %date% %time%'
                       echo 'Test #1'
                   }
               }
               stage('Test #2') {
                   agent {
                       label 'QROPD023'
                   }
                   steps {
                       echo 'Current time (agent 2): %date% %time%'
                       echo 'Test #2 on agent QROPD023'
                   }
               }
               stage('Test #3') {
                   agent any
                   steps {
                       echo 'Current time (agent 3): %date% %time%'
                       echo 'Test #3'
                       python script.py
                   }
               }
           }
       }
   }
}
